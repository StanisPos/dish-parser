{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@ducks/*": ["./store/ducks/*"],
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": [
    "src",
    "public",
    "models/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
